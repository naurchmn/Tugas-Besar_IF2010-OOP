public class Food {
    private String name;
    private int energy;
    private Integer buyPrice; // null jika tidak bisa dibeli
    private int sellPrice;

    public Food(String name, int energy, Integer buyPrice, int sellPrice) {
        this.name = name;
        this.energy = energy;
        this.buyPrice = buyPrice;
        this.sellPrice = sellPrice;
    }

    public String getName() {
        return name;
    }

    public int getEnergy() {
        return energy;
    }

    public Integer getBuyPrice() {
        return buyPrice;
    }

    public int getSellPrice() {
        return sellPrice;
    }

    public boolean isPurchasable() {
        return buyPrice != null;
    }

    public void displayInfo() {
        System.out.println("Nama: " + name);
        System.out.println("Energi: +" + energy);
        System.out.println("Harga Beli: " + (buyPrice != null ? buyPrice + "g" : "-"));
        System.out.println("Harga Jual: " + sellPrice + "g");
        System.out.println();
    }
}
